name: Production - X Service

on:
  push:
    branches:
      - prod
    paths:
      - "y/z/**"

env:
  IMAGE_NAME: dockerhub-username/image-name
  DEPLOY_REPO: github-username/project-production-gitops
  DEPLOY_FILE_PATH: app/backend/x-backend.yaml
  BRANCH: main

jobs:
  build-push-update:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Login to Docker Hub (GitHub runner)
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_UNAME }}
          password: ${{ secrets.DOCKER_PASS }}

      - name: Build Docker image
        run: |
          cd y/z
          docker build -t $IMAGE_NAME:${{ github.sha }} .

      - name: Scan Docker image with Trivy
        uses: aquasecurity/trivy-action@master
        with:
          image-ref: ${{ env.IMAGE_NAME }}:${{ github.sha }}
          format: 'table'
          exit-code: '1'       # fail workflow on HIGH/CRITICAL
          severity: 'CRITICAL'

      - name: Push Docker image
        run: |
          cd y/z
          echo "Pushing image $IMAGE_NAME:${{ github.sha }}"
          docker push $IMAGE_NAME:${{ github.sha }}
          echo "Docker image pushed successfully"

      # -------------------------
      # GITOPS SECTION
      # -------------------------

      - name: Checkout GitOps Deployment Repository
        uses: actions/checkout@v4
        with:
          repository: ${{ env.DEPLOY_REPO }}
          token: ${{ secrets.GITOPS_PAT }}
          path: gitops
          ref: ${{ env.BRANCH }}

      - name: Update image in Kubernetes manifest
        run: |
          cd gitops
          NEW_IMAGE="${IMAGE_NAME}:${{ github.sha }}"
          echo "Updating manifest to use image: $NEW_IMAGE"

          sed -i "s|image:.*|image: $NEW_IMAGE|" $DEPLOY_FILE_PATH

      - name: Commit and push changes
        run: |
          cd gitops
          git config --global user.name "GitHub Actions"
          git config --global user.email "actions@github.com"

          git add ${{ env.DEPLOY_FILE_PATH }}
          git commit -m "Update x-service to image $IMAGE_NAME:${{ github.sha }}"
          git push
