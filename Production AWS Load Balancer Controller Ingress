apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: sample-ingress
  namespace: app
  annotations:
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/target-type: ip
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP":80},{"HTTPS":443}]'
    alb.ingress.kubernetes.io/certificate-arn: <certificate-arn>
    alb.ingress.kubernetes.io/ssl-redirect: "443"
spec:
  ingressClassName: alb
  rules:
    - host: sample.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: sample-svc
                port:
                  number: 80 
    - host: sampleb.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: sampleb-svc
                port:
                  number: 80
    - host: sampleapi.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: sample-backend-svc
                port:
                  number: 4000
